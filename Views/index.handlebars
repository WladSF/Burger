<div class="page-wrap">

<h1>Eat Da Burger!</h1>


<div class="uneaten-burgers">
<h2>Uneaten Burgers</h2>


 {{!-- Adds list element for each uneaten burger. Adds 'devour' button from partials file to each uneaten burger --}}
 {{!-- --------------------------------------------------------------------------------------------------------- --}}
<ul class="uneaten">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>

</div>

<div class="eaten-burgers">
<h2>Eaten Burgers</h2>

{{!-- Adds list element for each uneaten burger --}}
{{!-- ----------------------------------------- --}}
<ul class="eaten">
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>

</div>



<div class="burger-form">
{{!-- The 'Add Burger' button --}}
{{!-- ----------------------- --}}
<h2>Add a Burger</h2>
<form class="new-burger-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>

</div>